#!/bin/bash

#SOURCE=./docker/php/etc/zz-xdebug.ini
#DESTINATION=/usr/local/etc/php/conf.d/zz-xdebug.ini

#docker cp $SOURCE "$(docker-compose ps -q app)":$DESTINATION
#docker cp $SOURCE "$(docker-compose ps -q fpm)":$DESTINATION

docker-compose exec --user=root app XDEBUG_MODE=develop,debug
docker-compose exec --user=root fpm XDEBUG_MODE=develop,debug
docker-compose exec --user=root fpm kill -USR2 1
echo "XDebug enabled"
